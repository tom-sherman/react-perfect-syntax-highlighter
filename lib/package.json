{
  "name": "react-perfect-syntax-highlighter",
  "version": "1.0.0",
  "description": "Perfect syntax highlighter for React using server components.",
  "type": "module",
  "main": "./dist/cjs/codeblock.js",
  "module": "./dist/codeblock.js",
  "types": "./dist/codeblock.d.ts",
  "exports": {
    ".": {
      "module": "./dist/codeblock.js",
      "types": "./dist/codeblock.d.ts",
      "require": "./dist/cjs/codeblock.js"
    },
    "./actions": {
      "import": "./dist/experimental_actions.js",
      "types": "./dist/experimental_actions.d.ts",
      "require": "./dist/cjs/experimental_actions.js"
    }
  },
  "scripts": {
    "build": "tsc --P ./tsconfig.json --outDir dist && tsc --P ./tsconfig.json --outDir dist/cjs --module commonjs"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "server component",
    "server action",
    "syntax",
    "highlighter",
    "code",
    "codeblock",
    "code-block",
    "code block",
    "code highlighting",
    "code highlighting react",
    "code highlighting reactjs",
    "code highlighting react.js",
    "code highlighting react component",
    "code highlighting react"
  ],
  "author": "Tom Sherman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tom-sherman/react-perfect-syntax-highlighter.git"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@code-hike/lighter": "^0.6.6",
    "server-only": "^0.0.1"
  }
}
